<div class ="row">
<%= render :partial => "community_board/contentlayout" %>
<div class="panel panel-default">
        <!-- Default panel contents -->
        <!--글번호	제 목	작성자	작성일	조회-->
        <div class="panel-heading"><h4>FAQ</h4></div>

        <!-- Table -->
        <table class="table table-hover">
            <thead>
            <tr>
                <th>글번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>작성일</th>
                <th>조회</th>
            </tr>
            </thead>
            <% if @boardList.count>0%>
            <tbody>
            	<% @boardList.each do |boardRow| %>
            <tr style="cursor: pointer;">
                <th scope="row">번호</th>
                <td style="cursor: pointer;" >
                	<p align=center>
                    <a href="/viewWork?id=<%=boardRow.id%>&current_page=<%= @current_page %>&searchStr=None" title="<%= boardRow.text%>"><%= boardRow.title %>
                </p>
                </td>
                <td><%=boardRow.writer%></td>
                <td><%=boardRow.created_at %></td>
                <td><%=boardRow.read_count %></td>
            </tr>
            <%end%>
            </tbody>
            <%else%>
            <p>No Data</p>
            <%end%>
        </table>
       <table cellspacing=1 width=700 border=1 >
    <tr>
        <td>
        <%  @totalPageList.each do |page| %>
            <a href="/listSpecificPageWork?current_page=<%=page%>" >
            [
            <% if page == @current_page.to_i %>
                <b>
            <% end %>

            <%=page%>

            <% if page == @current_page.to_i %>
                </b>
            <% end %>
            ]
         <% end %>
        </td>
    </tr>
</table>

<table width=700>
    <tr>
        <td><input type=button value="글쓰기"  OnClick="window.location='/write'" >  </td>
        <td><form name=searchf method=post action="/searchWithSubject/">
            <p align=right><input type=text name=searchStr size=50  maxlength=50>
            <input type=submit value="글찾기"></p>
        </td>
    </tr>
</table>
  </div>
</div>
